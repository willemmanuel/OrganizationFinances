<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Semester</h1>
    <%= form_for(@semester) do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
        <i>Note: this semester will be placed after the last created semester, <b><%= current_user.chapter.get_latest_semester.name %></b></i>
      </div>
      <br>
      <div class="actions">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
    <br>
    <i><%= link_to "Back", :back %></i>
  </div>
</div>
